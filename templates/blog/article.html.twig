{% extends 'base.html.twig' %}

{% block title %}
	{{ article.title }}
{% endblock %}

{% block body %}
	<div class="container-article-blog">
		<div class="container py-5">
			<div class="card shadow">
				<div class="card-body">
					<h1 class="card-title text-dark">{{ article.title }}</h1>
					<span class="badge bg-light text-dark rounded-pill mb-2 fw-normal">{{ article.category.name }}</span>
					<p class="card-text">{{ article.content|raw }}</p>
				</div>
			</div>

			{% if article.image %}
				<section class="d-flex justify-content-center section-img-article-blog">
					<img class="img-article-blog shadow" src="/assets/images/{{ article.image }}" alt="{{ article.title }}">
				</section>
			{% endif %}
		</div>
	</div>
{% endblock %}
