{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container">

		<br><br><br>

		<div class="row justify-content-center mt-5">
			<div class="col-lg-6">
				{% if app.user %}
					<div class="alert alert-success text-center">
						Vous êtes déjà connecté(e) en tant que
						{{ app.user.firstname }}
						{{ app.user.lastname }},
						<a href="{{ path('app_logout') }}" class="text-white">déconnectez-vous.</a>
					</div>
				{% else %}
					<form method="post" class="border border-light p-5 rounded">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
						<p class="h4 mb-4 text-center">Connexion</p>
						<div class="form-group">
							<label for="inputEmail">Adresse électronique</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						</div>
						<div class="form-group">
							<label for="inputPassword">Mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="btn btn-voir-fiche-produit btn-lg btn-block my-4" type="submit">Se connecter</button>
					</form>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
