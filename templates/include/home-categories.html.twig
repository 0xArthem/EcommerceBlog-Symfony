<ul class="list-group z-depth-0">
	{% for articlesCategorie in articlesCategories %}
		<a href="{{ path('article_category', {'slug':articlesCategorie.slug}) }}" class="text-dark mb-3">
			<li class="list-group-item d-flex justify-content-between align-items-center list-group-categories shadow">
				<i class="fas fa-caret-right me-1"></i>
				{{ articlesCategorie.name }}
				<span class="badge badge-primary badge-pill badge-length-articles">
					{{ articlesCategorie.articles|length }}
				</span>
			</li>
		</a>
	{% endfor %}
</ul>
