{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div>
		<h1>Produits par cat√©gorie
			{{ category.name }}
		</h1>
		{% if category.description %}
			<p>{{ category.description|raw }}</p>
		{% endif %}

		{# {% if category.image %}<img src="/assets/images/{{ category.image }}" alt="{{ category.name }}">{% endif %} #}

		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for product in products %}
				<a href="{{ path('product', {'slug':product.slug}) }}">
					{% include "include/product.html.twig" %}
				</a>
			{% endfor %}
		</div>

		<div class="navigation">
			{{ knp_pagination_render(products) }}
		</div>
	</div>
{% endblock %}
